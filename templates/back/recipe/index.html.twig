{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    {{ include('back/recipe/sidebar.html.twig') }}
    <div>
        <h1 class="text-center mt-4">Liste des recettes</h1>
        <div class="container my-4">
            <table class="table table-striped table-bordered table-responsive mt-4">
                <thead class="table-dark">
                    <tr class="text-center">
                        <th scope="col">Id</th>
                        <th scope="col">Titre</th>
                        <th scope="col">Description</th>
                        <th scope="col">Instruction</th>
                        <th scope="col">Dur√©e</th>
                        <th scope="col">Portion</th>
                        <th scope="col">actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for recipe in recipes %}
                    <tr class="text-center">
                        <td scope="row">{{ recipe.id }}</td>
                        <td>{{ recipe.title }}</td>
                        <td>{{ recipe.description }}</td>
                        <td>{{ recipe.instruction }}</td>
                        <td>{{ recipe.duration }}</td>
                        <td>{{ recipe.serving }}</td>
                        <td class="text-center align-middle">
                            <a href="{{ path('app_back_recipe_show', {'id': recipe.id}) }}" class="btn btn-sm btn-warning mb-3">show</a>
                            <a href="{{ path('app_back_recipe_update', {'id': recipe.id}) }}" class="btn btn-sm btn-warning mt-3">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        <a class="btn btn-success" href="{{ path('app_back_recipe_create') }}">Nouvelle recette</a>
        </div>
    </div>

{% endblock %}