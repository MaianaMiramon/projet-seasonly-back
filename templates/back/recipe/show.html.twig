{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="text-center mt-4">Recette n° {{ recipe.id }} : {{ recipe.title }}</h1>
        <div>
            <div>
                <div class="d-flex justify-content-between">
                    <div>
                        <a href="{{ path('app_back_recipe_index') }}" type="button" class="btn btn-primary">Retour à la liste</a>
                    </div>
                    <div class="d-flex">
                        <a href="{{ path('app_back_recipe_update', {'id': recipe.id}) }}" type="button" class="btn btn-warning">Modifier</a>

                        {{ include('back/recipe/_delete_form.html.twig') }}
                    </div>
                </div>
                    <table class="table table-striped table-bordered table-responsive mt-4">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ recipe.id }}</td>
                            </tr>
                            <tr>
                                <th>Title</th>
                                <td>{{ recipe.title }}</td>
                            </tr>
                            <tr>
                                <th>Image</th>
                                <td>{{ recipe.image }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ recipe.description }}</td>
                            </tr>
                            <tr>
                                <th>Instruction</th>
                                <td>{{ recipe.instruction }}</td>
                            </tr>
                            <tr>
                                <th>Duration</th>
                                <td>{{ recipe.duration }}</td>
                            </tr>
                            <tr>
                                <th>Serving</th>
                                <td>{{ recipe.serving }}</td>
                            </tr>
                            <tr>
                                <th>Meal</th>
                                <td>{{ recipe.meal.name }}</td>
                            </tr>
                            <tr>
                                <th>Created_at</th>
                                <td>{{ recipe.createdAt ? recipe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Updated_at</th>
                                <td>{{ recipe.updatedAt ? recipe.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
            </div>
            <div>
                <h3 class="text-center mt-4">Les ingrédients :</h1>
                <table class="table table-striped table-bordered table-responsive mt-4">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Quantité</th>
                            <th>Mesure</th>
                            <th>Ingrédient</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for content in contents %}
                            <tr class="text-center">
                                <td>{{ content.id }}</td>
                                <td>{{ content.quantity }}</td>
                                <td>{{ content.measure.type }}</td>
                                <td>{{ content.ingredient.name }}</td>
                                <td class="text-center align-middle">
                                    <a href="{{ path('app_back_content_update', {'id': content.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                </td>
                                <td>
                                    {{ include('back/content/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10">Aucun ingrédient n'est associé à cette recette</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <a class="btn btn-success" href="{{ path('app_back_content_create') }}">Ajouter un nouvel ingrédient</a>
            </div>       
        </div>
    </div>
{% endblock %}